---
import Logo from '@/components/Logo.astro';
import NavLink from '@/components/NavLink.astro';

const FOOTER_DATA = {
  info: [
    { href: '#contact', text: 'Ankara, Turkey' },
    { href: 'tel:+905452863606', text: '+90 545 286 36 06' },
    { href: 'mailto:ozgurgokd@gmail.com', text: 'ozgurgokd@gmail.com' },
  ],
  links: [
    { href: '#projects', text: 'Projects' },
    { href: '#skills', text: 'Skills' },
    { href: '#blog', text: 'Blog' },
  ],
  socials: [
    { href: 'https://www.linkedin.com/in/ozgurgokdemir/', text: 'LinkedIn' },
    { href: 'https://github.com/ozgurgokdemir/', text: 'GitHub' },
    { href: 'https://www.reddit.com/user/ozgurgokdemir/', text: 'Reddit' },
  ],
};
---

<footer class="mt-16 border-t border-neutral/10">
  <nav
    aria-label="Secondary Navigation"
    class="container flex flex-col gap-16 py-16 sm:flex-row sm:justify-between sm:gap-0"
  >
    <div class="flex flex-col items-center gap-4 sm:items-start">
      <Logo href="#" />
      <ul class="flex flex-col items-center gap-3 sm:items-start">
        {
          FOOTER_DATA.info.map(({ href, text }) => (
            <li>
              <NavLink {href} {text} />
            </li>
          ))
        }
      </ul>
    </div>
    <div class="flex flex-col items-center gap-4 sm:items-start">
      <h3
        class="font-secondary text-label-base-600 text-neutral transition-colors duration-300"
      >
        Links
      </h3>
      <ul class="flex flex-col items-center gap-3 sm:items-start">
        {
          FOOTER_DATA.links.map(({ href, text }) => (
            <li>
              <NavLink {href} {text} />
            </li>
          ))
        }
      </ul>
    </div>
    <div class="flex flex-col items-center gap-4 sm:items-start">
      <h3
        class="font-secondary text-label-base-600 text-neutral transition-colors duration-300"
      >
        Socials
      </h3>
      <ul class="flex flex-col items-center gap-3 sm:items-start">
        {
          FOOTER_DATA.socials.map(({ href, text }) => (
            <li>
              <NavLink {href} {text} />
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</footer>
