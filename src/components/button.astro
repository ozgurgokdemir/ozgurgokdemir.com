---
import type { HTMLAttributes } from 'astro/types';
import LoadingEllipsis from '@/components/loading-ellipsis.astro';
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

type Props = HTMLAttributes<'button'> & VariantProps<typeof buttonVariants>;

const {
  variant,
  size,
  type = 'button',
  class: className,
  ...props
} = Astro.props;

export const buttonVariants = cva(
  "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4 shrink-0 [&_svg]:shrink-0 outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive",
  {
    variants: {
      variant: {
        primary: 'bg-primary text-primary-foreground hover:bg-primary/90',
        secondary:
          'bg-secondary text-secondary-foreground hover:bg-secondary/80',
        outline:
          'border shadow-xs hover:text-accent-foreground bg-accent/20 border-input hover:bg-accent/30',
        ghost: 'hover:bg-accent/50 hover:text-accent-foreground',
        link: 'text-primary underline-offset-4 hover:underline',
      },
      size: {
        sm: 'h-8 rounded-lg gap-1.5 px-3',
        lg: 'h-10 rounded-xl px-6',
        'icon-sm': 'size-8',
        'icon-lg': 'size-10',
      },
    },
    defaultVariants: {
      variant: 'primary',
      size: 'lg',
    },
  },
);
---

<button
  {type}
  class={cn(buttonVariants({ variant, size, className }))}
  {...props}
>
  <span
    class="invisible absolute inset-0 grid place-items-center opacity-0 transition-[visibility,opacity] group-data-[loading=true]:visible group-data-[loading=true]:opacity-100"
  >
    <LoadingEllipsis />
  </span>
  <span
    class="visible flex size-full items-center justify-center gap-3 transition-[visibility,opacity] group-data-[loading=true]:invisible group-data-[loading=true]:opacity-0"
  >
    <slot />
  </span>
</button>
