---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'input'>;

const { class: className, ...props } = Astro.props;
---

<input
  class:list={[
    'h-10 rounded-lg bg-white/10 px-3 text-base font-medium text-white outline-2 outline-offset-2 outline-blue-500 transition-colors placeholder:text-white/40 focus-visible:outline',
    className,
  ]}
  {...props}
/>
