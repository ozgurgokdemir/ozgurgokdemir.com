---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'input'>;

const { class: className, ...props } = Astro.props;
---

<input
  class:list={[
    'focus-visible:border-ring focus-visible:ring-ring/50 bg-input placeholder:text-muted-foreground/70 h-10 rounded-lg px-3 font-medium transition-colors outline-none focus-visible:ring-[3px] disabled:pointer-events-none disabled:opacity-50',
    className,
  ]}
  {...props}
/>
