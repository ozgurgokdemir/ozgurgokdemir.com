---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'textarea'>;

const { class: className, ...props } = Astro.props;
---

<textarea
  class:list={[
    'rounded-lg bg-white/10 px-3 py-2 text-base font-medium text-white outline-2 outline-offset-2 outline-blue-500 placeholder:text-white/40 focus-visible:outline',
    className,
  ]}
  {...props}></textarea>
