---
import { Icon } from 'astro-icon/components';

type Props = {
  class?: string;
};

const { class: className } = Astro.props;
---

<a
  href="/"
  class:list={[
    'inline-flex items-center gap-2 outline-2 outline-offset-2 outline-blue-500 focus-visible:outline',
    className,
  ]}
>
  <Icon name="logo" size={24} />
  <span class="text-2xl font-semibold leading-none text-white">Özgür</span>
</a>
