---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'div'> & {
  text?: string;
};

const { text = 'or', class: className, ...props } = Astro.props;
---

<div
  class:list={[
    'flex items-center gap-2 text-base font-medium text-white/60 before:h-px before:w-full before:bg-white/10 after:h-px after:w-full after:bg-white/10',
    className,
  ]}
  {...props}
>
  {text}
</div>
