---
import { Icon } from 'astro-icon/components';
import LinkButton from '@/components/link-button.astro';

type Props = {
  href: string;
  alt: string;
  icon: string;
  class?: string;
};

const { href, alt, icon } = Astro.props;
---

<LinkButton
  variant="ghost"
  size="icon-sm"
  {href}
  target="_blank"
  aria-label={alt}
>
  <Icon name={icon} size={16} />
</LinkButton>
