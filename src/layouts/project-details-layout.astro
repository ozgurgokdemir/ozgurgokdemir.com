---
import BaseLayout, { type BaseLayoutProps } from '@/layouts/base-layout.astro';
import BackButton from '@/components/back-button.astro';

type Props = BaseLayoutProps;
---

<BaseLayout {...Astro.props}>
  <header
    class="fixed top-0 right-0 left-0 z-30 flex h-24 w-full items-center px-4 md:h-36 md:px-6 lg:px-8"
  >
    <BackButton fallback="/projects" />
  </header>
  <main class="max-h-dvh overflow-hidden">
    <slot />
  </main>
</BaseLayout>
