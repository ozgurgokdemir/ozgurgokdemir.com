    icon: 'simple-icons:html5',
    color: '#E34F26',
  },
  {
    title: 'SASS',
    icon: 'simple-icons:sass',
    color: '#CC6699',
  },
  {
    title: 'Tailwind CSS',
    icon: 'simple-icons:tailwindcss',
    color: '#06B6D4',
  },
  {
    title: 'Chakra UI',
    icon: 'simple-icons:chakraui',
    color: '#319795',
  },
  {
    title: 'Framer Motion',
    icon: 'simple-icons:framer',
    color: '#0055FF',
  },
  {
