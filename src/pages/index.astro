    color: 'hsl(var(--color-neutral))',
  },
  {
    title: 'PostgreSQL',
    icon: 'simple-icons:postgresql',
    color: '#4169E1',
  },
  {
    title: 'MongoDB',
    icon: 'simple-icons:mongodb',
    color: '#47A248',
  },
  {
    title: 'Strapi',
